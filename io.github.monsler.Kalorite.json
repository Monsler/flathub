{
    "app-id": "io.github.monsler.Kalorite",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "kalorite",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "Kalorite",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Monsler/Kalorite",
                    "tag": "v1.0.18"
                }
            ],
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/share/doc",
                "/share/man"
            ]
        }
    ]
}